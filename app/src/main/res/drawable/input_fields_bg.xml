<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="#FFFFFF" />
            <stroke
                android:width="2dp"
                android:color="#390FAA"
                android:dashWidth="0dp"
                android:dashGap="0dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="-2dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="#D0FFFCFC" />
            <stroke
                android:width="2dp"
                android:color="@android:color/transparent"
                android:dashWidth="0dp"
                android:dashGap="0dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="-2dp"/>
        </shape>
    </item>

</selector>