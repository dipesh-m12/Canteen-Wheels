<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#3CDF43" /> <!-- Change to your desired green color -->
            <corners android:radius="4dp" />
        </shape>
        <!-- Change to your desired text color when pressed -->
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Change to your desired green color -->
            <corners android:radius="4dp" />
            <stroke
                android:width="3dp"
                android:color="#3CDF43" />
            <corners android:radius="4dp" />
        </shape>
         <!-- Change to your desired text color when pressed -->
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="3dp"
                android:color="#3CDF43" /> <!-- Change to your desired stroke color -->
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>