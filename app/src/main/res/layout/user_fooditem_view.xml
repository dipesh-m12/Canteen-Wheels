<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:layout_gravity="center_horizontal"
    android:id="@+id/relative_itemlayout_admin"
    android:paddingHorizontal="10dp"
    android:paddingVertical="5dp"
    android:layout_marginHorizontal="22dp"
    android:background="@drawable/card_view_template"
    android:elevation="10dp"
    android:outlineAmbientShadowColor="@color/veg_food">

        <ImageView
            android:id="@+id/itemview_image"
            android:layout_width="95dp"
            android:layout_height="88dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="6dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/border"
            android:padding="3dp"
            android:scaleType="fitXY" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_toEndOf="@id/itemview_image"
            android:id="@+id/name"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="6dp"
            android:paddingStart="10dp"
            />

        <TextView
            android:id="@+id/itemview_name"
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"

            android:layout_marginLeft="0dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/name"
            android:paddingStart="10dp"
            android:text="item name"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:drawableEnd="@drawable/baseline_currency_rupee_24"
            android:paddingStart="10dp"
            android:layout_marginTop="2dp"
            android:layout_below="@id/itemview_name"
            android:layout_toRightOf="@id/itemview_type"
            android:id="@+id/price"/>

        <TextView
            android:id="@+id/itemview_price"
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemview_name"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"

            android:layout_toRightOf="@id/price"
            android:text="Price"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@id/itemview_name"
            android:layout_toEndOf="@id/itemview_image"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:paddingStart="10dp"
            android:id="@+id/type"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Type"
            android:visibility="gone"
            android:background="@drawable/button_register"
            android:gravity="center"
            android:layout_marginHorizontal="7dp"
            android:layout_marginTop="2dp"
            android:layout_below="@id/itemview_name"
            android:layout_toEndOf="@id/type"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginBottom="2dp"
            android:paddingStart="10dp"
            android:id="@+id/itemview_type"/>

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemview_price"
            android:layout_alignEnd="@+id/itemview_name"
            android:layout_marginTop="-5dp"
            android:layout_marginEnd="3dp"
            android:background="@drawable/buyoption"
            android:drawableStart="@drawable/baseline_add_24"
            android:drawableTint="@color/white"
            android:paddingEnd="8dp"
            android:text="Add"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/itemview_name"
            android:layout_alignEnd="@+id/itemview_name"
            android:layout_marginTop="-7dp"
            android:layout_marginEnd="11dp"
            android:drawablePadding="1dp"
            android:background="@drawable/veg_btn_bg"
            android:drawableStart="@drawable/foodtype_indicator"
            android:drawableTint="@color/veg_food"
            android:text="" />


        <!--    <TextView-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="1dp"-->
        <!--        android:layout_below="@id/itemview_image"-->
        <!--        android:layout_marginTop="10dp"-->
        <!--        android:layout_marginEnd="13dp"-->
        <!--        android:layout_marginBottom="0dp"-->
        <!--        android:background="#9E9C9C"-->
        <!--        android:text="." />-->
    </RelativeLayout>

