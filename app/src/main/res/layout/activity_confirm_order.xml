<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:paddingHorizontal="12dp"
    android:paddingTop="10dp"
    tools:context=".confirm_order">

    <ImageView
        android:id="@+id/image"
        android:layout_width="387dp"
        android:layout_height="272dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="9dp"
        android:layout_marginTop="25dp"
        android:scaleType="fitXY"
        android:layout_marginBottom="20dp"
        android:padding="4dp"
        android:background="@drawable/border"
        app:srcCompat="@drawable/g12" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:padding="4dp"
        android:textSize="15dp"
        android:text="Order Id:" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView3"
        android:padding="4dp"
        android:textSize="15dp"
        android:text="Item:" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-1dp"
        android:drawableEnd="@drawable/baseline_currency_rupee_24"
        android:drawablePadding="5dp"
        android:padding="4dp"
        android:text="Price:"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:padding="4dp"
        android:textSize="15dp"
        android:text="Type:" />
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView6"
        android:padding="4dp"
        android:textSize="15dp"
        android:text="Time:" />



    <TextView
        android:id="@+id/id"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:padding="4dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_toRightOf="@id/textView3"
        android:text="..." />
    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView3"
        android:padding="4dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_toRightOf="@id/textView4"
        android:text="..." />
    <TextView
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView4"
        android:padding="4dp"
        android:textStyle="bold"
        android:layout_marginEnd="20dp"
        android:layout_toRightOf="@id/textView5"
        android:textSize="15dp"
        android:text="..." />
    <TextView
        android:id="@+id/type"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:padding="4dp"
        android:layout_toRightOf="@id/textView6"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="..." />
    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView6"
        android:padding="4dp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/textView6"
        android:textSize="15dp"
        android:text="..." />
    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView7"
        android:padding="4dp"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:text="Quantity:" />
    <TextView
        android:id="@+id/minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView7"
        android:layout_toEndOf="@id/textView8"
        android:layout_marginStart="100dp"
        android:drawableStart="@drawable/minus"
        android:padding="4dp"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
 />
    <TextView
        android:id="@+id/quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView7"
        android:layout_toEndOf="@id/minus"
        android:layout_marginStart="10dp"
        android:text="0"
        android:padding="4dp"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        />
    <TextView
        android:id="@+id/plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView7"
        android:layout_toEndOf="@id/quantity"
        android:layout_marginStart="10dp"
        android:drawableStart="@drawable/plus"
        android:padding="4dp"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        />




    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/minus"
        android:padding="4dp"
        android:textSize="15dp"
        android:drawableEnd="@drawable/baseline_currency_rupee_24"
        android:text="Total:" />
    <TextView
        android:id="@+id/total"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_below="@id/minus"
        android:padding="4dp"
        android:layout_toRightOf="@id/textView9"
        android:textSize="15dp"
        android:textStyle="bold"

        android:text="0" />




    <Button
        android:id="@+id/ConfirmBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/btn_logout"
        android:paddingHorizontal="30dp"
        android:text="Confirm"
        android:elevation="20dp"
        android:backgroundTint="#2DBD6F"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progressBar_confirmorder"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/ConfirmBtn"
        android:visibility="gone"
        android:layout_marginRight="-16dp"
        android:layout_marginBottom="15dp"
        android:layout_toLeftOf="@id/quantity" />

</RelativeLayout>